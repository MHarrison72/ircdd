#! /bin/bash
set -eo pipefail

export ETCD_PORT=${ETCD_PORT:-4001}
export HOST_IP=${HOST_IP:-172.17.42.1}
export ETCD=$HOST_IP:$ETCD_PORT

echo "[rdb] booting container. ETCD: $ETCD"

until confd -onetime -node $ETCD -config-file /etc/confd/conf.d/rethinkdb.toml; do
    echo "[rdb] waiting for confd to create initial nsqd configuration"
    sleep 5
done

echo "[rdb] is now monitoring etcd for changes..."\
touch /var/log/confd.log
confd -interval 10 -node $ETCD -config-file /etcd/confd/conf.d/rethinkdb.toml &> /var/log/confd.log &

echo "[rdb] starting rdb..."
rethindkb serve --config-file=/etc/rethinkdb/rethinkdb.conf --daemon

tail -f /var/log/*.log
