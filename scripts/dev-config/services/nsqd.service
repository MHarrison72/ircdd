[Unit]
Description=NSQDaemon
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=5
ExecStartPre=-/usr/bin/docker kill nsqd
ExecStartPre=-/usr/bin/docker rm nsqd
ExecStartPre=/usr/bin/docker pull dockerfile/nsq
ExecStart=/usr/bin/docker run --name nsqd -p 4150:4150 -p 4151:4151 --link nsqlookupd-search:nsqlookupd-search dockerfile/nsq nsqd --data-path /data --lookupd-tcp-address nsqlookupd-search:4160
ExecStop=/usr/bin/docker stop nsqd

[X-Fleet]
Global=true
